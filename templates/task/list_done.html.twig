{% extends 'base.html.twig' %}

{% block header_img %}<img class="slide-image" src="{{ asset('img/todolist_content.jpg') }}" alt="todo list">
{% endblock %}

{% block body %}
	<div class="row">
		<a href="{{ path('task_list') }}" class="btn btn-warning pull-right">Voir les tâches</a>
	</div>
	<div class="row">
		{% for task in tasks %}
			{% include 'teaser/task_done.html.twig' with {"task":task} %}
		{% else %}
			<div class="alert alert-warning" role="alert">
				Il n'y a pas encore de tâche terminées.
			</div>
		{% endfor %}
	</div>
{% endblock %}
