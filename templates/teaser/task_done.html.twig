<div class="col-sm-4 col-lg-4 col-md-4">
	<div class="thumbnail">
		<div class="caption">
			<h4 class="pull-right">
				{% if task.isDone %}
					<span class="glyphicon glyphicon-ok"></span>
				{% else %}
					<span class="glyphicon glyphicon-remove"></span>
				{% endif %}
			</h4>
			<h4>
				{{ task.title }}
			</h4>
			<p>{{ task.content }}</p>
		</div>
	</div>
</div>